{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"lib": [ "dom", "es2015" ],
		"module": "system",
		"moduleResolution": "node",
		"target": "es5",

		"baseUrl": ".",
		"rootDir": ".",
		"outDir": "../dist",
		"paths": {
			"@common/*": ["./common.blocks/*"]
		}
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"**/node_modules/*",
		"**/*.spec.ts"
	]
}